<UserControl
    x:Class="DocStack.MVVM.View.DocumentsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:DocStack.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:DocStack.MVVM.ViewModel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <viewModel:DocumentsViewModel />
    </UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#272537">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <TextBlock
             Grid.Row="0"
             Margin="30,30,30,20"
             FontFamily="pack://application:,,,/Fonts/#Roboto"
             FontSize="32"
             FontWeight="Bold"
             Foreground="#f8f8f8"
             Text="Documents" />

            <!--  Controls  -->
            <StackPanel
             Grid.Row="1"
             Margin="30,0,30,30"
             Orientation="Horizontal">
                <Button
                 MinWidth="50"
                 Margin="0,0,15,0"
                 Padding="20,10"
                 Content="+ New"
                  Click="OpenFileDialog_Click"
                 
                 Style="{StaticResource ModernButtonForDoc}" />

                <ComboBox
                 Width="150"
                 ItemContainerStyle="{StaticResource ComboBoxItemStyle}"
                 Style="{StaticResource ComboBoxFlatStyle}">
                    <ComboBoxItem>aaaa</ComboBoxItem>
                    <ComboBoxItem>aaaa</ComboBoxItem>
                    <ComboBoxItem>aaaa</ComboBoxItem>
                    <ComboBoxItem>aaaa</ComboBoxItem>
                </ComboBox>
            </StackPanel>







        </Grid>
    </ScrollViewer>
</UserControl>
