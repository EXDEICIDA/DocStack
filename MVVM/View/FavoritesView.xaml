<UserControl
    x:Class="DocStack.MVVM.View.FavoritesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:DocStack.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4C5BF7" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Roboto" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A49D1" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#272537">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <TextBlock
                Grid.Row="0"
                Margin="30,30,30,20"
                FontFamily="pack://application:,,,/Fonts/#Roboto"
                FontSize="32"
                FontWeight="Bold"
                Foreground="#f8f8f8"
                Text="Documents" />

            <!--  Controls  -->
            <StackPanel
                Grid.Row="1"
                Margin="30,0,30,30"
                Orientation="Horizontal">
                <Button
                    MinWidth="50"
                    Margin="0,0,15,0"
                    Padding="20,10"
                    Content="+ New"
                    Style="{StaticResource ModernButton}" />
                <Button
                    MinWidth="70"
                    Margin="0,0,15,0"
                    Padding="15,10"
                    Background="#3A3A3A"
                    Foreground="#f8f8f8"
                    Style="{StaticResource ModernButton}">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome
                            Height="14"
                            Margin="0,0,8,0"
                            Foreground="#f8f8f8"
                            Icon="Filter" />
                        <TextBlock Text="Filters"/>
                    </StackPanel>
                </Button>
                <ComboBox Width="200" Style="{StaticResource ComboBoxFlatStyle}">
                    <ComboBoxItem>aaaa</ComboBoxItem>
                    <ComboBoxItem>aaaa</ComboBoxItem>
                    <ComboBoxItem>aaaa</ComboBoxItem>
                    <ComboBoxItem>aaaa</ComboBoxItem>



                </ComboBox>
            </StackPanel>



            <!--  Recent  -->
            <StackPanel Grid.Row="3" Margin="30,0,30,30">
                <TextBlock
                    Margin="0,0,0,20"
                    FontFamily="pack://application:,,,/Fonts/#Roboto"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#f8f8f8"
                    Text="Recent" />
                <ItemsControl>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,0,10"
                                Padding="15"
                                Background="#3A3A3A"
                                CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <fa:ImageAwesome
                                        Width="24"
                                        Height="24"
                                        Margin="0,0,15,0"
                                        Foreground="#4C5BF7"
                                        Icon="File" />
                                    <StackPanel Grid.Column="1">
                                        <TextBlock
                                            FontFamily="pack://application:,,,/Fonts/#Roboto"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Foreground="#f8f8f8"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            FontFamily="pack://application:,,,/Fonts/#Roboto"
                                            FontSize="12"
                                            Foreground="#AAAAAA"
                                            Text="{Binding Date}" />
                                    </StackPanel>
                                    <TextBlock
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        FontFamily="pack://application:,,,/Fonts/#Roboto"
                                        FontSize="12"
                                        Foreground="#AAAAAA"
                                        Text="{Binding Size}" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!--  All Files  -->
            <Grid Grid.Row="4" Margin="30,0,30,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,20"
                    FontFamily="pack://application:,,,/Fonts/#Roboto"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#f8f8f8"
                    Text="All Files" />
                <ListView
                    Grid.Row="1"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#f8f8f8">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="400" Header="Name">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fa:ImageAwesome
                                                Height="16"
                                                Margin="0,0,10,0"
                                                Foreground="#4C5BF7"
                                                Icon="File" />
                                            <TextBlock
                                                FontFamily="pack://application:,,,/Fonts/#Roboto"
                                                FontSize="14"
                                                Foreground="#f8f8f8"
                                                Text="{Binding Name}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="200" Header="Upload By">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse
                                                Width="24"
                                                Height="24"
                                                Margin="0,0,10,0">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding UserAvatar}" />
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontFamily="pack://application:,,,/Fonts/#Roboto"
                                                Foreground="#f8f8f8"
                                                Text="{Binding UploadedBy}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="10,5" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <Border
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                            <GridViewRowPresenter
                                                Width="Auto"
                                                Margin="0"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                Content="{TemplateBinding Content}" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3A3A3A" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>