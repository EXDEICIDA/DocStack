<UserControl
    x:Class="DocStack.MVVM.View.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DocStack.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Grid Background="#272537">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <!--  Main Content  -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Sidebar  -->
            <Border
                Padding="15"
                Background="White"
                CornerRadius="10">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Categories" />
                    <ListBox Background="Transparent" BorderThickness="0">
                        <ListBoxItem Content="All Documents" />
                        <ListBoxItem Content="Recent" />
                        <ListBoxItem Content="Favorites" />
                        <ListBoxItem Content="Work" />
                        <ListBoxItem Content="Personal" />
                    </ListBox>
                </StackPanel>
            </Border>

            <!--  Right Content Area  -->
            <Grid Grid.Column="1" Margin="20,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Search Bar  -->
                <Border
                    Height="50"
                    Background="White"
                    CornerRadius="15">
                    <Grid>
                        <TextBox
                            Margin="20,0"
                            VerticalAlignment="Center"
                            BorderThickness="0"
                            Foreground="#AAAAAA"
                            Text="Search documents..." />
                        <Button
                            Width="50"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderThickness="0"
                            Content="🔍" />
                    </Grid>
                   
                </Border>

                <!--  Document List  -->
                <ListView
                    Grid.Row="1"
                    Margin="0,20,0,0"
                    Background="White"
                    BorderThickness="0">
                    <ListViewItem>
                        <Grid Width="700">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Width="40"
                                Height="50"
                                Margin="0,0,10,0"
                                Background="#FFE0B2"
                                CornerRadius="5">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="Bold"
                                    Foreground="#FB8C00"
                                    Text="PDF" />
                            </Border>
                            <StackPanel Grid.Column="1">
                                <TextBlock FontWeight="SemiBold" Text="Project Proposal.pdf" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#999"
                                    Text="Last modified: 2 days ago" />
                            </StackPanel>
                            
                            <Button
                                Grid.Column="2"
                                Width="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Content="..." />
                        </Grid>
                    </ListViewItem>
                    <!--  Add more ListViewItems for other documents  -->
                   
                </ListView>
              
            </Grid>
        </Grid>
        
    </Grid>
</UserControl>