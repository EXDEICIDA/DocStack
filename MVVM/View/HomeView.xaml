<UserControl
    x:Class="DocStack.MVVM.View.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DocStack.MVVM.View"
    xmlns:vm="clr-namespace:DocStack.MVVM.ViewModel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:HomeViewModel/>
    </UserControl.DataContext>

    <Grid Background="#272537">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left side with Calendar and Red Rectangles -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Calendar -->
            <Border Grid.Row="0" Background="#3498db" CornerRadius="5" Margin="20,20,10,10">
                <Border Margin="10" Background="White" CornerRadius="5">
                    <StackPanel Margin="10">
                        <!-- Calendar Header -->
                        <Grid Margin="0,0,0,10">
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button Background="Transparent" BorderThickness="0" Command="{Binding PreviousMonthCommand}" Content="&#x2039;" FontSize="18" />
                                <TextBlock Margin="10,0" VerticalAlignment="Center" FontSize="18" Text="{Binding CurrentMonthYear}" />
                                <Button Background="Transparent" BorderThickness="0" Command="{Binding NextMonthCommand}" Content="&#x203A;" FontSize="18" />
                            </StackPanel>
                            <Button HorizontalAlignment="Right" Padding="10,5" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" Command="{Binding TodayCommand}" Content="Today" FontSize="14" Style="{StaticResource ModernButton}" />
                        </Grid>

                        <!-- Calendar Grid -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Day Headers -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" HorizontalAlignment="Center" FontWeight="Bold" Text="Sun" />
                                <TextBlock Grid.Column="1" HorizontalAlignment="Center" FontWeight="Bold" Text="Mon" />
                                <TextBlock Grid.Column="2" HorizontalAlignment="Center" FontWeight="Bold" Text="Tue" />
                                <TextBlock Grid.Column="3" HorizontalAlignment="Center" FontWeight="Bold" Text="Wed" />
                                <TextBlock Grid.Column="4" HorizontalAlignment="Center" FontWeight="Bold" Text="Thu" />
                                <TextBlock Grid.Column="5" HorizontalAlignment="Center" FontWeight="Bold" Text="Fri" />
                                <TextBlock Grid.Column="6" HorizontalAlignment="Center" FontWeight="Bold" Text="Sat" />
                            </Grid>

                            <!-- Calendar Days -->
                            <ItemsControl Grid.Row="1" ItemsSource="{Binding Days}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="7" Rows="6" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#EEEEEE" BorderThickness="1">
                                            <Grid>
                                                <TextBlock Margin="5" Foreground="{Binding IsCurrentMonth, Converter={StaticResource BoolToColorConverter}}" Text="{Binding Date.Day}" />
                                                <Ellipse Width="24" Height="24" Fill="#E6A23C" Visibility="{Binding IsToday, Converter={StaticResource BoolToVisibilityConverter}}" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </StackPanel>
                </Border>
            </Border>

            <!-- Red Rectangles -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left column with two stacked rectangles -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#e74c3c" CornerRadius="5" Margin="20,10,10,5"/>
                    <Border Grid.Row="1" Background="#e74c3c" CornerRadius="5" Margin="20,5,10,20"/>
                </Grid>

                <!-- Right column (unchanged) -->
                <Border Grid.Column="1" Background="#c0392b" CornerRadius="5" Margin="10,10,10,20"/>
            </Grid>
        </Grid>

        <!-- Orange Box -->
        <Border Grid.Column="1" Background="#e67e22" CornerRadius="5" Margin="10,20,20,20"/>
    </Grid>
</UserControl>