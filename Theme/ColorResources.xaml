<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Colors -->
    <Color x:Key="PrimaryColor">#1E88E5</Color>
    <Color x:Key="SecondaryColor">#26A69A</Color>
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="TextPrimaryColor">#212121</Color>
    <Color x:Key="TextSecondaryColor">#757575</Color>
    <Color x:Key="GridLineColorKey">#E0E0E0</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="PrimaryTextColor" Color="#212121"/>
    <SolidColorBrush x:Key="SecondaryTextColor" Color="#757575"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="GridLineColor" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="PrimaryAccentBrush" Color="#1E88E5"/>
    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#26A69A"/>

    <!-- Effects -->
    <DropShadowEffect x:Key="ShadowDepth2" 
                      BlurRadius="8"
                      ShadowDepth="1"
                      Direction="270"
                      Opacity="0.2"
                      Color="#000000"/>
</ResourceDictionary>